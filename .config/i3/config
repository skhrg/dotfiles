client.focused          $bd-color           $bg-color          $text-color          #00ff00
client.unfocused        $bd-color           $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $bd-color           $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

