# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    output $m1
    tray_output none
    status_command bumblebee-status -t gruvbox-powerline \
        -m load cpu memory disk:root disk:home disk:CASTLE network_traffic nic datetime \
        -p datetime.format='%b-%d %H:%M:%S' root.path=/ home.path=/home CASTLE.path=/mnt/CASTLE
    #status_command i3status -c ~/.config/i3/i3status.conf
	colors {
		background $bg-color
	    separator $text-color
		statusline $text-color 
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

bar {
    output $m2
    tray_output $m2
    #font xft:Source Code Pro
    status_command bumblebee-status -t gruvbox-powerline \
        -m mpd dnf pasource pasink weather datetime \
        -p datetime.format='%b-%d %H:%M:%S' weather.left-click="urxvt256c-ml -e bash -c 'curl wttr.in/?m && fish'"
    # status_command  while :; do date '+%b-%d %H:%M:%S'; done
	colors {
		background $bg-color
	    separator $text-color
		statusline $text-color 
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

